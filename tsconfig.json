{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "outDir": "./build",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "paths": {
      "~balancer": ["balancer"],
      "~balancer/*": ["balancer/*"],
      "~fetcher": ["fetcher"],
      "~fetcher/*": ["fetcher/*"],
      "~interfaces": ["interfaces"],
      "~interfaces/*": ["interfaces/*"],
      "~transactions": ["transactions"],
      "~transactions/*": ["transactions/*"],
      "~utils": ["utils"],
      "~utils/*": ["utils/*"],
      "~config": ["config"],
      "~config/*": ["config/*"]
    }
  },
  "include": [
    "src/**/*",
    "./hardhat.config.ts",
    "./scripts",
    "./deploy",
    "./test"
  ],
}
